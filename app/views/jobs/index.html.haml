= partial 'layouts/left_half' do
  %h2 Jobs
  %p This is a free service for Boston Rubyists and those seeking Boston Rubyists.
  %p= link_to 'Add a job', new_job_path
    
= partial 'layouts/right_half' do
  %h3 Job Postings
  - unless @jobs.empty?
    %dl
      - @jobs.each do |job|
        = partial 'jobs/list_item', :job => job
  - else
    %p None at this time.
  = link_to "#{@old_job_count} older job posts", old_jobs_path if @old_job_count
  = link_to "#{@recent_job_count} recent job posts", jobs_path if @recent_job_count