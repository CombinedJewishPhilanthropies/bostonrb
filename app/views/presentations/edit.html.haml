%h2 Edit presentation

= error_messages_for :presentation

- form_for(@presentation) do |form|
  = partial 'presentations/form', :form => form
  %p= form.submit 'Update', :disable_with => 'Please wait...'
  %p= link_to 'Delete', presentation_path(@presentation), :method => :delete, :confirm => 'Are you sure?'
