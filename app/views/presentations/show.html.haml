#show
  .ribbon
    .row
      .crud
        %p= link_to 'Edit', edit_presentation_url(@presentation)
      %h2= link_to @presentation.title, @presentation.url
      %ul.details
        - unless @presentation.presenter.nil? || @presentation.presenter.empty?
          %li.clearfix
            .detail= @presentation.presenter
            .label Who
        - unless @presentation.location.nil? || @presentation.location.empty?
          %li.clearfix
            .detail= @presentation.location
            .label Where
        %li.clearfix.last
          .detail= @presentation.description_html
          .label What
        -#- unless @presentation.embed.nil? || @presentation.embed.empty?
          -#%li.clearfix
            -#.detail= @presentation.embed
            -#.label Watch
