!!! Transitional
%html
  %head
    %title Boston.rb
    = stylesheet_link_tag 'blueprint/screen', :media => 'screen'
    = blueprint_ie
    = stylesheet_link_tag 'screen', :media => 'screen'
    = auto_discovery_link_tag :rss, '/jobs.rss', :title => 'Jobs feed'
  %body{ :id => "#{controller.controller_name}_body" }
    .container
      #header{ :class => 'column span-24' }
        %h1= link_to 'Boston.rb', home_path
        %ul
          = tab_for 'projects'
          = tab_for 'events'
          = tab_for 'videos'
          = tab_for 'jobs'
          %li= link_to 'Mailing List', 'http://groups.google.com/group/boston-rubygroup'
          %li= link_to 'Blog', 'http://boston.rubygroup.org'
          %li= link_to "#{image_tag 'rss.png'}", '/jobs.rss'
      #content{ :class => 'column span-24' }
        = partial 'layouts/flashy'
        = next_event
        = yield

  = yield :google_maps_js
