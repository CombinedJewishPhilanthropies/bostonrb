!!! Transitional
%html
  %head
    %title Boston.rb
    = stylesheet_link_tag 'screen', :media => 'screen'
    = auto_discovery_link_tag :rss, '/jobs.rss', :title => 'Jobs feed'
  %body{ :id => "#{controller.controller_name}_body" }
    .container
      #header{ :class => 'column span-24' }
        %h1= link_to 'Boston.rb', root_path
        %ul
          %li= link_to "#{image_tag 'rss.png'}", '/jobs.rss'
      #content{ :class => 'column span-24' }
        = partial 'layouts/flashes'
        = partial 'events/banner'
        = yield

    = yield :google_maps_js
